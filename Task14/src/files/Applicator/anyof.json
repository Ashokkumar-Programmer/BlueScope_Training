{
 	"$schema": "http://json-schema.org/draft-07/schema#",
 	"type": "object",
 	"properties": {
	    "students": {
	    "type": "array",
	    "items":{
	    	"type":"object",
	    	"anyOf":[
		    	{
			    	"properties": {
			    		"id": {"type": "number"}
			    	},
			    	"required": ["id"]
		    	},
		    	{
			    	"properties": {
			    		"name": {"type": "number"}
			    	}
		    	}
	    	]
		}
		}
	},
	"required": ["students"]
}